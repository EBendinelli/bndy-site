---
import dayjs from "dayjs";
import IconCalendar from "@/assets/icons/IconCalendar.svg";
import { SITE } from "@/config";

export interface Props {
  class?: string;
  size?: "sm" | "lg";
  startDate: string | Date;
  endDate?: string | Date | null;
  active: boolean;
}

const {
  startDate,
  endDate,
  active,
  size = "sm",
  class: className = "",
} = Astro.props;

const startDatetime = dayjs(startDate);
const endDatetime = endDate ? dayjs(endDate) : null;

const startDateFormatted = startDatetime.format("YYYY");
const endDateFormatted = endDatetime ? endDatetime.format("YYYY") : null;

const displayPeriod = active
  ? `${startDateFormatted} - on-going`
  : endDateFormatted
  ? `${startDateFormatted} - ${endDateFormatted}`
  : startDateFormatted;
---

<div class:list={["flex items-end space-x-2 opacity-80", className]}>
  <IconCalendar
    class:list={[
      "inline-block size-6 min-w-[1.375rem]",
      { "scale-90": size === "sm" },
    ]}
  />
  <span class:list={["text-sm italic", { "sm:text-base": size === "lg" }]}>
    <time datetime={startDatetime.toISOString()}>{displayPeriod}</time>
  </span>
</div>