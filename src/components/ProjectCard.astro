---
import { slugifyStr } from "@/utils/slugify";
import type { CollectionEntry } from "astro:content";
import { getProjectPath } from "@/utils/getProjectPath";
import Datetime from "./Datetime.astro";
import { Image } from "astro:assets";

export interface Props extends CollectionEntry<"projects"> {
  variant?: "h2" | "h3";
}

const { variant = "h2", data, id, filePath } = Astro.props;

const { title, description, coverImage, pubDateTime, redirectUrl } = data;

const headerProps = {
  style: { viewTransitionName: slugifyStr(title) },
  class: "text-xl font-medium decoration-dashed hover:underline",
};

---

<div class="group relative overflow-hidden border border-border bg-card transition-all hover:border-accent rounded-sm shadow-sm hover:shadow-md">
  <a href={redirectUrl || getProjectPath(id, filePath)} class="block">
    {coverImage && (
      <div class="aspect-video w-full overflow-hidden">
        {typeof coverImage === "string" ? (
          <img src={coverImage} alt={title} class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" />
        ) : (
          <Image src={coverImage} alt={title} class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" />
        )}
        {/* {redirectUrl && (
          <div class="absolute top-0 right-0">
            <span class="text-foreground bg-background bg-opacity-50  p-2" aria-label="External link" title="External link">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6 inline">
                    <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z" clip-rule="evenodd" />
                  </svg>
            </span>
          </div>
        )} */}
      </div>
    )}
    <div class="p-4 ">
      <span class="text-accent">
        {
          variant === "h2" ? (
            <h2 {...headerProps}>
              {title}
              {redirectUrl && (
                <span class="text-sm text-foreground opacity-60" aria-label="External link" title="External link">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-4 inline">
                    <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z" clip-rule="evenodd" />
                  </svg>
                </span>
              )}
            </h2>
          ) : (
            <h3 {...headerProps}>
              {title}
              {redirectUrl && (
                <span class="prose" aria-label="External link" title="External link">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-4 inline">
                    <path fill-rule="evenodd" d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z" clip-rule="evenodd" />
                  </svg>
                </span>
              )}
            </h3>
          )
        }
      </span>
      {description && <p class="mt-2 text-base/6 text-muted-foreground">{description}</p>}
    </div>
  </a>
</div>
